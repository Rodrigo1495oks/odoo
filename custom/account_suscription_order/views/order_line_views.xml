        <record id="view_cash_line_search" model="ir.ui.view">
            <field name="name">view.cash.line.search</field>
            <field name="model">account.suscription.cash.line</field>
            <field name="arch" type="xml">
                <search string="Cash Line">
                    <field name="name"/>
                    <field name="active" string="Active"/>
                    <field name="short_name" string="Referencia"/>
                    <field name="state" invisible="1"/>
                    <separator/>
<!--                    <filter name="active" string="Activos" domain="[('active','=',True)]"/>-->
<!--                    <filter name="partial" string="Partial Contributed" domain="[('state','=','partial_contributed')]"/>-->
<!--                    <filter name="contributed" string="Totally Contributed" domain="[('state','=','contributed')]"/>-->
<!--                    <filter name="integrated" string="Integrated" domain="[('state','=','integrated')]"/>-->
                    <filter name="display" string="Not Display" domain="[('display_type','=',False)]"/>
                    <separator/>
                    <filter name="bigger" string="Biggest" domain="[('price_total','&gt;=',1000000)]"/>
                    <group expand="1" string="Group By">
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                        <filter string="Order" name="order" context="{'group_by':'order_id'}"/>
                        <filter string="Currency" name="currency" context="{'group_by':'currency_id'}"/>
                        <filter string="Company" name="company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
