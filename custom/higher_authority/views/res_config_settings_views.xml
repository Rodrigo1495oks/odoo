<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.higher.authority</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Higher_authority"
                        id="higher_authority" string="Autoridad Superior"
                        data-key="higher_authority">
                        <h2>Higher Authority Management</h2>
                        <div class="row mt16 o_settings_container" id="end_contract_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane" />
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Cuenta Resultados del ejercicio</span>
                                    <div class="text-muted content-group mt16">
                                        <span>Cuenta Contable </span>
                                        <field name="financial_year_result_account"
                                            class="text-center"
                                            style="width: 10%; min-width: 4rem;" />
                                        <span> Cuenta de resultados solamente</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row mt16 o_settings_container" id="end_contract_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane" />
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Cuenta Resultados del ejercicio</span>
                                    <div class="text-muted content-group mt16">
                                        <span>Cuenta Contable </span>
                                        <field name="financial_year_result_account"
                                            class="text-center"
                                            style="width: 10%; min-width: 4rem;" />
                                        <span> Cuenta de resultados solamente</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- io approvals and lock -->

                        <div class="col-12 col-lg-6 o_setting_box" id="io_order_approval">
                            <div class="o_setting_left_pane">
                                <field name="io_order_approval" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="io_order_approval" />
                                <span class="fa fa-lg fa-building-o"
                                    title="Values set here are company-specific."
                                    aria-label="Values set here are company-specific."
                                    groups="base.group_multi_company" role="img" />
                                <div class="text-muted">
                                    Request managers to approve orders above a minimum amount
                                </div>
                                <div class="content-group"
                                    attrs="{'invisible': [('io_order_approval', '=', False)]}">
                                    <div class="row mt16">
                                        <label for="io_double_validation_amount"
                                            class="col-lg-4 o_light_label" />
                                        <field name="io_double_validation_amount" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="automatic_lock_confirmed_orders">
                            <div class="o_setting_left_pane">
                                <field name="lock_confirmed_io" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="lock_confirmed_io" />
                                <div class="text-muted">
                                    Automatically lock confirmed orders to prevent editing
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="higher_authority_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'higher_authority', 'bin_size': False}</field>
        </record>

        <menuitem id="higher_authority_config_settings_menu" name="Settings"
            parent="higher_authority.menu_configuration" sequence="0"
            action="higher_authority_config_settings_action"
            groups="base.group_system" />
    </data>
</odoo>