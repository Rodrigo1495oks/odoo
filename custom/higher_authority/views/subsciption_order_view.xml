<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- Accion para crear la propiedad -->
        <record id="subscription_order_action" model="ir.actions.act_window">
            <field name="name">Crear Orden de Subscripción</field>
            <field name="res_model">subscription.order</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <!-- vistas -->

        <record id="subscription_order_view_tree" model="ir.ui.view">
            <field name="name">subscription.order.tree</field>
            <field name="model">subscription.order</field>
            <field name="arch" type="xml">
                <tree string="Property" decoration-success="state=='offer' or state=='accept'"
                    decoration-bf='state=="accept"' decoration-muted="state=='sold'">
                    <field name="priority" widget="priority" class="mr-3" />
                    <field name="number" />
                    <field name='shareholder_id' />
                    <field name="company_id" />
                    <field name="user_id" widget="many2one_avatar_user " />
                    <field name="integration_date_due" />
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="origin" />
                    <field name="amount_total" />
                    <field name="state" optional="show" widget="badge"
                        decoration-success="state == 'approved' or state == 'confirm'"
                        decoration-warning="state == 'cancel'"
                        decoration-info="state == 'posted' or state == 'new'" />
                </tree>
            </field>
        </record>

        <!-- formulario -->
        <record id="subscription_order_view_form" model="ir.ui.view">
            <field name="name">subscription.order.form</field>
            <field name="model">subscription.order</field>
            <field name="arch" type="xml">
                <form string="Orden de Subscripción">
                    <header>
                        <button name="action_set_sold" string="Vender" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '=', 'sold')]}" />
                        <button name="action_set_canceled" string="Cancelar" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '=', 'canceled')]}" />
                        <button name="action_confirm" string="Confirmar Alta" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'draft')]}" />
                        <button name="action_draft" string="Cambiar a borrador" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '=', 'draft')]}" />
                        <button name="action_offer" string="Cerrar Ofertas" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'new')]}" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,new,approved,confirm,posted,cancel" />
                    </header>
                    <sheet>
                        <!-- <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}" /> -->
                        <div class="oe_title">
                            <span class="o_form_label"
                                attrs="{'invisible': [('state','in',('draft'))]}">Subscription Order </span>
                            <h1 class="d-flex mb32">
                                <field name="priority" widget="priority" class="me-3" />
                                <field name="number" readonly="1" />
                            </h1>
                            <field name='qty_to_subscribe'
                                attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name='amount_total'
                                attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name='qty_integrated'
                                attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name='qty_pending'
                                attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </div>
                        <group>
                            <group id="header_left_group">
                                <field name="priority" widget="priority" class="mr-3" />
                                <field name='number' />
                                <!-- <field name="tags_ids" widget="many2many_tags"
                                    options="{'color_field': 'color'}" /> -->
                                <field name="pending" widget="boolean_button"
                                    options='{"terminology": "pending"}' />
                                <field name="pending" widget='boolean_toggle' />
                                <field name="company_id" />
                                <field name="post_code" options='{"type": "number"}' />
                                <field name="subscription_date"
                                    options='{"datepicker": {"daysOfWeekDisabled": [0, 6]}}' />
                                <field name="integration_date_due" optional='True'
                                    attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="payment_term_id"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="share_qty"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="nominal_value"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="price"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="issue_premium"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="issue_discount"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name='payment_term_id' />
                            </group>
                            <group id="header_right_group">

                            </group>
                        </group>

                        <notebook>
                            <page id="int_lines1" string="Créditos a Integrar">
                                <group>
                                    <group>
                                        <field name='credit_lines'/>
                                    </group>
                                </group>
                            </page>
                            <page id="int_lines2" string="Efectivo a Integrar">
                                <group>
                                    <group>
                                        <field name='cash_lines'/>
                                    </group>
                                </group>
                            </page>
                            <page id="int_lines3" string="Productos a Integrar">
                                <group>
                                    <group>
                                        <field name='product_lines'/>
                                    </group>
                                </group>
                            </page>
                            <page id="shareholder_info" string="Informacion Accionistas :->">
                                <group>
                                    <field name="shareholder_id"/>
                                    <field name="share_issuance"/>
                                    <field name="topic"/>
                                    <!-- <field name="percentage_pie" string="Replied"
                                        widget="percentpie" /> -->
                                    <field name="qty_integrated" widget="progressbar"
                                        options="{'current_value': 'qty_integrated', 'max_value': 'amount_total', 'editable': True, 'edit_max_value':True, 'title':'Cantidad Integrada'}" />
                                    <field name='shareholder_id'/>

                                    <!-- <field name="toggle_button" widget="toggle_button"
                                        options='{"active": "Reported in last payslips", "inactive": "To Report in Payslip"}'
                                    /> -->
                                    <field name="selection_a" widget="radio"
                                        options="{'horizontal':true}" />
                                    <field name="selection_b"
                                        widget="selection_badge" />
                                </group>
                            </page>
                            <page id='share_info' string='Acciones'>
                                <group>
                                    <field name='shares'/>
                                </group>
                            </page>
                            <page id='integrations' string='Integraciones'>
                                <group>
                                    <field name='integration_orders'/>
                                    <field name='account_move' invisible='1'/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search view -->

        <record id="estate_property_view_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Propiedades">
                    <field name="name" string="Propiedad" />
                    <field name="short_name" string="Nombre Corto" />
                    <field name="post_code" string="Código Postal" />
                    <field name="expected_price" string="Precio Esperado" />
                    <field name="bedrooms" string="Habitaciones" />
                    <field name="living_area" string="Area del Living (Metros Cuadrados) - " />
                    <field name="availability" string="Disponibilidad" />
                    <field name="facades" string="Fachadas" />

                    <separator />
                    <filter name="living_area" string="Living Area"
                        domain="[('living_area','>=','230')]"
                        help="Mostrar valores por encima de 230mts cuadrados" />
                    <filter name="availability" string="Disponibilidad"
                        domain="[('availability','=','True')]"
                        help="Mostrar propiedades disponibles" />
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]" />
                    <filter string="Active" name="active" domain="[('active', '=', True)]" />
                    <filter string="Propiedades Disponibles" name="available_properties" />
                    <separator />

                    <group expand="1" string="Group By">
                        <filter string="Orientación" name="orientation"
                            context="{'group_by':'garden_orientation'}" />
                        <filter string="Estado" name="state" context="{'group_by':'state'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Estate Property Kanban View  -->
        <record model="ir.ui.view" id="view_estate_property_kanban">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <!-- class="o_kanban_mobile" js_class="property_kanban_dashboard" sample="1" -->
                <kanban>
                    <field name="name" />
                    <field name="buyer" readonly="1" />
                    <field name="state" />
                    <field name="date_availability" />
                    <field name="priority" widget="priority" class="mr-3" />
                    <field name="expected_price"
                        attrs="{'invisible': [('state', '!=', 'accept'), ('state', '!=', 'sold')]}" />
                    <field name="best_price" attrs="{'invisible': [('state', '!=', 'offer')]}" />
                    <field name="tags_ids" widget="many2many_tags"
                        options="{'color_field': 'color'}" />
                    <field name="selling_price"
                        attrs="{'invisible': [('state', '=', 'offer'),('state', '=', 'accept'), ('state', '=', 'sold') ]}" />
                    <!-- ('draft', 'Borrador'),
                ('new', 'Nuevo'),
                ('offer', 'Oferta Recibida'),
                ('accept', 'Oferta Aceptada'),
                ('sold', 'Vendido'),
                ('canceled', 'Cancelado') -->
                    <progressbar field="state"
                        colors='{"sold": "success", "today": "offer", "overdue": "canceled"}' />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <field name="priority" widget="priority" />
                                    <div class="o_kanban_record_headings ml-1">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <t t-esc="record.buyer.value" />
                                            </span>
                                        </strong>
                                    </div>
                                    <strong>
                                        <field name="expected_price" widget="monetary" />
                                    </strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span>
                                            <t t-esc="record.name.value" />
                                            <t
                                                t-esc="record.date_availability.value and record.date_availability.value.split(' ')[0] or False" />
                                        </span>
                                        <!-- <field name="activity_ids" widget="kanban_activity" /> -->
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection"
                                            options="{'classes': {'draft': 'default', 'new': 'default', 'sold': 'success', 'accept': 'warning'}}" />
                                    </div>
                                </div>
                                <div>
                                    <p t-if="record.state.raw_value == 'accept'">
                                        <strong>
                                            <field name="selling_price" widget="monetary" />
                                        </strong>
                                    </p>
                                    <p t-elif="record.state.raw_value == 'offer'">
                                        <strong>
                                            <field name="best_price" widget="monetary" />
                                        </strong>
                                    </p>
                                    <p t-else="">
                                        <strong>
                                            <field name="expected_price" />
                                        </strong>
                                    </p>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="tags_ids" widget="many2many_tags"
                                            options="{'color_field': 'color'}" />
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" />
                                    </div>
                                </div>
                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>